<scene version='2.0.0'>

    <integrator type='direct'>
        <integer name="emitter_samples" value="8"/>
        <integer name="bsdf_samples" value="0"/>
    </integrator>
    <!-- <integrator type='depth'> -->
    <!-- </integrator> -->

    <sensor type="perspective">
        <float name="near_clip" value="1"/>
        <float name="far_clip" value="1000"/>

        <transform name="to_world">
            <lookat target="0.0, 0.0, 0.2"
                    origin="3, -10.0, 2"
                    up    ="0.0, 0.0, 1.0"/>
        </transform>

        <film type="hdrfilm">
            <integer name="width" value="192"/>
            <integer name="height" value="108"/>
        </film>

        <sampler type="independent">
            <integer name="sample_count" value="8"/>
        </sampler>
    </sensor>

    <shape type="ply">
        <string name="filename" value="ico.ply"/>

        <transform name="to_world">
            <translate x="1.0" y="0.0" z="0.0"/>
        </transform>

        <bsdf type="diffuse">
            <spectrum name="radiance" value="0.1f, 0.3f, 10.0f, 0.5f"/>
        </bsdf>
    </shape>
    <shape type="ply">
        <string name="filename" value="flat-torus.ply"/>

        <transform name="to_world">
            <rotate x="1.0" y="2.0" z="0.0" angle="-15"/>
            <translate x="-1.5" y="2.0" z="2.0"/>
        </transform>

        <bsdf type="diffuse">
            <spectrum name="radiance" value="10.0f, 0.5f, 1.0f, 1.0f"/>
        </bsdf>
        <!-- <emitter type="area">
            <spectrum name="radiance" value="0.5f, 5.1f, 0.1f, 10.1f"/>
        </emitter> -->
    </shape>

    <emitter type="point">
        <point name="position" x="1.5" y="-6.0" z="1.5"/>
        <spectrum name="intensity" value="2.0f, 2.0f, 2.0f, 2.0f"/>
    </emitter>
</scene>
