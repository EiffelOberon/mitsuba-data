<scene version='2.0.0'>
    <integrator type='direct'>
        <integer name="emitter_samples" value="64"/>
        <integer name="bsdf_samples" value="64"/>
    </integrator>

    <sensor type="perspective">
        <float name="near_clip" value="1"/>
        <float name="far_clip" value="1000"/>

        <transform name="to_world">
            <lookat target="-0.5, -0.5, 0.2"
                    origin="1.0, -6.0, 2"
                    up    ="0.0, 0.0, 1.0"/>
        </transform>

        <film type="hdrfilm">
            <rfilter type="box"/>
            <integer name="width" value="192"/>
            <integer name="height" value="108"/>
        </film>

        <sampler type="independent">
            <integer name="sample_count" value="512"/>
        </sampler>
    </sensor>

    <!-- |     Emitters -->
