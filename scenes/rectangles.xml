<scene version='2.0.0'>
    <integrator type="path"/>

    <sensor type="perspective">
        <float name="near_clip" value="1"/>
        <float name="far_clip" value="1000"/>

        <transform name="to_world">
            <lookat target="0.0, 0.0, 0.0"
                    origin="15.0, 0.0, 45.0"
                    up    ="0.0, 0.0, 1.0"/>
        </transform>

        <film type="hdrfilm">
            <rfilter type="box"/>
            <string name="pixel_format" value="rgb"/>
            <!-- <integer name="width" value="192"/>
            <integer name="height" value="108"/> -->
            <integer name="width" value="300"/>
            <integer name="height" value="200"/>
        </film>

        <sampler type="independent">
            <integer name="sample_count" value="2048"/>
        </sampler>
    </sensor>

    <shape type="rectangle">
        <transform name="to_world">
            <scale x="10.0" y="10.0" z="10.0"/>
            <rotate x="1.0" y="0.0" z="0.0" angle="115"/>
            <rotate x="0.0" y="1.0" z="0.0" angle="45"/>
            <translate x="-10.0" y="-10.0" z="10.0"/>
        </transform>
        <bsdf type="diffuse" />

        <emitter type="area">
            <spectrum name="radiance" value="1f"/>
        </emitter>
    </shape>


    <shape type="rectangle">
        <transform name="to_world">
            <scale x="10.0" y="10.0" z="10.0"/>
            <translate x="0.0" y="0.0" z="0.0"/>
        </transform>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.0, 1.0, 0.2"/>
        </bsdf>
    </shape>

    <shape type="rectangle">
        <transform name="to_world">
            <scale x="8.0" y="8.0" z="8.0"/>
            <translate x="0.0" y="0.0" z="1.0"/>
        </transform>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.0, 0.8, 0.4"/>
        </bsdf>
    </shape>

    <shape type="rectangle">
        <transform name="to_world">
            <scale x="5.0" y="5.0" z="5.0"/>
            <translate x="0.0" y="0.0" z="2.0"/>
        </transform>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.2, 0.8, 0.6"/>
        </bsdf>
    </shape>

    <shape type="rectangle">
        <transform name="to_world">
            <scale x="3.0" y="3.0" z="3.0"/>
            <translate x="0.0" y="0.0" z="3.0"/>
        </transform>
        <bsdf type="diffuse">
            <rgb name="reflectance" value="0.2, 0.8, 0.7"/>
        </bsdf>
    </shape>
</scene>
